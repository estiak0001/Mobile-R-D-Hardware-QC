@model IEnumerable<WebAppEs.ViewModel.PartsModel.PartsModelViewModel>
@{ ViewData["Title"] = "Register"; }
<div class="x_panel shadow p-3 mb-5 bg-white rounded">
    <div class="container">
        <div class="x_title">
            <h2>List of Models</h2>
            <div class="nav navbar-right panel_toolbox">
                <a style="float:right" class="btn btn-info" asp-action="CreateModel"> <i class="fa fa-plus pr-2"></i> Create New</a>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box table-responsive">

                        <table id="datatable-responsive" class="table table-sm  dt-responsive nowrap" cellspacing="0" width="100%">
                            <thead style="background-color: #d7e3ef;">
                                <tr>
                                    <th>Name</th>
                                    <th>Supplier</th>
                                    <th style="text-align:center">Action's</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Supplier)
                                        </td>
                                        <td style="text-align:center">
                                            <a style=" font-size: large; color: blue;" asp-action="CreateModel" asp-controller="ProductModel" asp-route-id="@item.ID"><i class="fa fa-edit"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
